{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "module": "es6",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "**/__tests__/*", "dist", "types", "docs"]
}
